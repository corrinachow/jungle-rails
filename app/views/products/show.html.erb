<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd>&#36;<%= @product.price %></dd>
          <% if current_user %>
            <%= form_for [@product, @review] do |form| %>
              <div class="form-group">
                <dt><%= form.label :rating %></dt>
                <dd><%= form.select :rating, [ '1','2','3', '4', '5' ], :prompt => 'Select One' %></dd>
              </div>
              <div class="form-group">
                <dt><%= form.label :description %></dt>
                <dd><%= form.text_area :description, class: 'form-control' %></dd>
              </div>
              <dd><%= form.submit 'Post review', class: 'btn btn-primary' %></dd>
            <% end %>
            <% end %>
          </dt>
        </dl>

      </div>
    </div>
  </article>


  <table class="table table-bordered">
      <thead>
        <tr>
          <th>User</th>
          <th>Review</th>
          <th>Stars</th>
        </tr>
      </thead>
      <tbody>
        <%= render @reviews.reverse %>
      </tbody>
  </table>

</section>
